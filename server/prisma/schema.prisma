model User {
  id        Int        @default(autoincrement()) @id
  name      String?    @unique
  habbits   Habbit[]
  thoughts  Thought[]
  todos     Todo[]
  exercises Exercise[]
  createdAt DateTime   @default(now())
}

model Habbit {
  id          Int      @default(autoincrement()) @id
  title       String   @unique
  description String
  streak      Int      @default(0)
  isHabbit    Boolean  @default(false)
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Thought {
  id          Int      @default(autoincrement()) @id
  description String
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Todo {
  id          Int      @default(autoincrement()) @id
  title       String   @unique
  description String
  completed   Boolean  @default(false)
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Exercise {
  id          Int      @default(autoincrement()) @id
  title       String
  description String?
  image       String
  weight      Int?
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}